@import 'components/icons'

.bdsft-webrtc
  .table
    display table
    width 100%
  .fixed
    table-layout fixed
  .collapse
    border-collapse collapse
  .cell
    display table-cell
  .heading
    display table-row
    font-weight bold
  .row
    display table-row
    margin 0
  .group
    display table-row-group

  .hidden
    display: none !important
  .opaque
    opacity: 0 !important
    
  .popup
    background #292929
    padding 10px
    border 2px solid #DDDDDD
    float left
    position absolute
    top 0
    bottom 0
    left 0
    right 0
    margin auto
    box-shadow 0px 0px 10px #999999
    border-radius 3px
    font-size 14px
    line-height 18px
    z-index 100
    .actions
      text-align right
    .title
      font-weight bold
      font-size 18px
      color white
      
  .centered
    top 50%
    left 50%
    bottom auto
    right auto
    transform translate(-50%,-50%)
    backface-visibility hidden
    
  .topright
    right auto
    left 100%
    top 0
    bottom auto
        
  .audioOnly .centered, .audioOnly.centered
    top 0%
    transform translate(-50%,40px)

  .fadeable
    opacity 0
    display block
    z-index -1
    backface-visibility hidden

  .fadeIn
    {fadeIn}

  .fadeOut
    {fadeOut}
