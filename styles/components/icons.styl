@import 'font-face'
font-face-inline('Exario-Icon-Fonts', 'Exario-Icon-Fonts', '../fonts')
font-face-inline('bsl_icons', 'bsl_icons', '../fonts')

.bdsft-webrtc
  [class^="icon-"], [class*=" icon-"]
    font-family 'bsl_icons'
    speak none
    font-style normal
    font-weight normal
    font-variant normal
    text-transform none
    line-height 1
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale

  [class^="icon-"].exario
    font-family 'Exario-Icon-Fonts'
    speak none
    text-decoration none
    margin 0 0.35em 0 0
    font-size 25px

  .icon-link
    &:before
      content "\e00b"

  .icon
    cursor pointer
    a
      speak none
      text-decoration none
      margin 0 0.35em 0 0

  .icon
    a
      &:before
        color #FFFFFF

  .icon-quality
    &:before
      color #00FF00
      opacity .4

  .icon-quality1
    &:before
      content "\e007"
  .icon-quality2
    &:before
      content "\e006"
  .icon-quality3
    &:before
      content "\e005"
  .icon-quality4
    &:before
      content "\e004"

  .icon-trash
    &:before
      content "\e013"
      color #FF0000

  .icon-screen-sharing
    &:before
      content "\e604"

  .icon-screen-sharing-off
    &:before
      content "\e605"
      
  .icon-dialpadShow:before, .icon-dialpadShow:hover:before, .icon-dialpadHide:before, .icon-dialpadHide:hover:before
    content "\ed3b"

  a.icon-hangup:before, a.icon-hangup:hover:before
    content "\e600"
    color #FF0000

  .icon-clock
    &:before
      content "\e634"

  .icon-cog:before, .icon-settings:before, .icon-settings:hover:before
    content "\e601"

  .icon-resume:before, .icon-resume:hover:before, .icon-hold:before, .icon-hold:hover:before
    content "\e6bb"

  .icon-unmuteAudio:before, .icon-unmuteAudio:hover:before
    content "\e6c1"

  .icon-muteAudio:before, .icon-muteAudio:hover:before
    content "\e6c3"

  .icon-arrow-up-thick
    &:before
      content "\f5a4"

  .icon-arrow-down-thick
    &:before
      content "\f5a5"

  .icon-cancel3
    &:before
      content "\f2c9"

  .icon-fullscreenContract:before, .icon-fullscreenContract:hover:before, .icon-fullscreenExpand:before, .icon-fullscreenExpand:hover:before
    content "\f371"

  .icon-th
    &:before
      content "\e602"

  .icon-selfViewShow:before, .icon-selfViewShow:hover:before, .icon-selfViewHide:before, .icon-selfViewHide:hover:before
    content "\f17f"

  .icon-transfer:before, .icon-transfer:hover:before
    content "\f186"

  .icon-angle-right
    &:before
      content "\f1fe"

  a.icon-call
    &:before
      content "\e00e"
      color #3B9E3B

  @css {
    .bdsft-webrtc .icon-highlightable:hover{
      color: <%= iconHighlightColor %>;
    }
  }
  @css {
    .bdsft-webrtc .icon a:hover:before, 
    .bdsft-webrtc .icon a:hover, 
    .bdsft-webrtc .icon span:hover, 
    .bdsft-webrtc .videoBar a:hover:before, 
    .bdsft-webrtc .videoBar a:hover {
      color: <%= iconHighlightColor %>;
    }
  }
